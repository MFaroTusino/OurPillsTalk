<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="Scan" parent="AppBaseTheme">
        <item name="android:background">#ffc3d888</item>
    </style>
    <style name="History" parent="AppBaseTheme">
        <item name="android:background">#FF1bbc9b</item>
    </style>
    <style name="Settings" parent="AppBaseTheme">
        <item name="android:background">#FF9b58b5</item>
    </style>
    <style name="Emergency" parent="AppBaseTheme">
        <item name="android:background">#FFe84c3d</item>
    </style>
    <style name="Help" parent="AppBaseTheme">
        <item name="android:background">#ff3598db</item>
    </style>



    <style name="boldText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="normalText">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#C0C0C0</item>
    </style>

</resources>
