<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Scan_history" >

    <RelativeLayout
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content" >

        <RelativeLayout
            android1:id="@+id/header"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:background="@drawable/top_bar"
            android:visibility="invisible">

            <ImageView
                android1:id="@+id/back"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_alignParentLeft="true"
                android1:layout_centerVertical="true"
                android1:layout_marginLeft="5dp"
                android1:background="@drawable/back_icon" />

            <ImageView
                android1:id="@+id/delete_all_list"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_alignParentRight="true"
                android1:layout_centerVertical="true"
                android1:layout_marginRight="5dp"
                android1:background="@drawable/delete_all" />

            <TextView
                android1:id="@+id/textView3"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
android1:layout_marginLeft="20dp"
                android1:layout_centerVertical="true"
                android1:layout_toRightOf="@+id/back"
                android1:text="Scan History"
                android1:textSize="24sp" />

        </RelativeLayout>

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#FFCC00"
    android:dividerHeight="4px"
            android:layout_below="@+id/header" >
        </ListView>
    </RelativeLayout>

</RelativeLayout>